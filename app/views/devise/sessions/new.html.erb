<h2>Log in</h2>


<section class="form-block py-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-5 col-md-7 col-sm-12 mx-auto">
        <div class="login shadow py-5 px-4 my-5">
          <div class="title text-right py-3">
            <h3 class="font-weight-bold">Login Form</h3>
            <p>Stylish Login Form for Websites</p>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <form class="py-4">
            <div class="form-group mb-4">
            <%= f.input :login, :label => "Identity Card", :class=> 'form-control rounded-pill shadow-none' %>
            </div>
            <div class="form-group mb-4">
            <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password" }, :class => "form-control rounded-pill shadow-none" %>
<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            
            </div>
            <%= f.button :submit, "Log in", :class => 'btn btn-btc font-weight-bold shadow-none' %>
            <% end %>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render "devise/shared/links" %>
