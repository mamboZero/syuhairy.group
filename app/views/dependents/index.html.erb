<h1>Dependents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ic num</th>
      <th>Mail add 1</th>
      <th>Mail add 2</th>
      <th>Race</th>
      <th>Religion</th>
      <th>Marital status</th>
      <th>Profession</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Phone number</th>
      <th>Contribution value</th>
      <th>Agent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dependents.each do |dependent| %>
      <tr>
        <td><%= dependent.name %></td>
        <td><%= dependent.ic_num %></td>
        <td><%= dependent.mail_add_1 %></td>
        <td><%= dependent.mail_add_2 %></td>
        <td><%= dependent.race %></td>
        <td><%= dependent.religion %></td>
        <td><%= dependent.marital_status %></td>
        <td><%= dependent.profession %></td>
        <td><%= dependent.height %></td>
        <td><%= dependent.weight %></td>
        <td><%= dependent.phone_number %></td>
        <td><%= dependent.contribution_value %></td>
        <td><%= dependent.agent_id %></td>
        <td><%= link_to 'Show', dependent %></td>
        <td><%= link_to 'Edit', edit_dependent_path(dependent) %></td>
        <td><%= link_to 'Destroy', dependent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

